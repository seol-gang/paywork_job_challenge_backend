{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "sourceMap": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["ES2015", "ES6", "ES5"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
